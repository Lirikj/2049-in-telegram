// Простая логика игры 2049
const canvas = document.getElementById('game-board');
const ctx = canvas.getContext('2d');
// Инициализация игрового поля и других переменных
// Реализуйте логику игры: создание плиток, обработка ввода, проверка условий победы/проигрыша

// Пример функции для рисования плиток
function drawTile(x, y, value) {
    ctx.fillStyle = getTileColor(value);
    ctx.fillRect(x * 100, y * 100, 100, 100);
    ctx.fillStyle = '#776e65';
    ctx.font = 'bold 48px Arial';
    ctx.fillText(value, x * 100 + 50, y * 100 + 60);
}

function getTileColor(value) {
    const colors = {
        2: '#eee4da',
        4: '#ede0c8',
        // Добавьте остальные цвета
        2048: '#edc22e'
    };
    return colors[value] || '#3c3a32';
}

